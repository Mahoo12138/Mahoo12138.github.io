{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ES2015",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"baseUrl": ".",
		"typeRoots": ["node_modules/@types", "./typings"],
		"incremental": true
	},
	"include": [
		"api/**/*.ts",
	],
	"exclude": ["node_modules"]
}
